// بديل مجاني حتى نحصل على API Key
async function callAIFallback(prompt) {
    // استخدام نموذج مفتوح المصدر أو خدمة مجانية
    try {
        const response = await fetch('https://api.openai.com/v1/chat/completions', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Authorization': 'Bearer sk-...' // سنستخدم بديل مجاني
            },
            body: JSON.stringify({
                model: "gpt-3.5-turbo",
                messages: [{ role: "user", content: prompt }]
            })
        });
        return await response.json();
    } catch (error) {
        // نظام ذكي بديل
        return generatePhilosophicalResponse(prompt);
    }
}
